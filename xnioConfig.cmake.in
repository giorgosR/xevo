# xnio cmake module
# This module sets the following variables in your project::
#
#   xnio_FOUND - true if xnio found on the system
#   xnio_INCLUDE_DIRS - the directory containing xnio headers
#   xnio_LIBRARY - empty

@PACKAGE_INIT@

include(CMakeFindDependencyMacro)
find_dependency(xtensor @xtensor_REQUIRED_VERSION@)

if(NOT TARGET @PROJECT_NAME@)
    include("${CMAKE_CURRENT_LIST_DIR}/@PROJECT_NAME@Targets.cmake")
    get_target_property(@PROJECT_NAME@_INCLUDE_DIRS @PROJECT_NAME@ INTERFACE_INCLUDE_DIRECTORIES)
endif()

if (${CMAKE_MAJOR_VERSION}.${CMAKE_MINOR_VERSION} VERSION_GREATER_EQUAL 3.11)
    if(NOT TARGET xnio::optimize)
        add_library(xnio::optimize INTERFACE IMPORTED)
        # Microsoft compiler
        if(CMAKE_${COMPILER_LANGUAGE}_COMPILER_IS_MSVC)
            target_compile_options(xnio::optimize INTERFACE /EHsc /MP /bigobj)
        # gcc, clang, ...
        else()
            target_compile_options(xnio::optimize INTERFACE -march=native)
        endif()
    endif()
endif()